{
  "name": "roulette-rest",
  "version": "1.0.0",
  "description": "Rest Node.js starter kit",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "better-npm-run dev",
    "test": "better-npm-run test",
    "check-types": "node_modules/.bin/tsc -p . --noEmit -w"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon -e ts -w ./src -x ts-node ./src/index.ts",
      "env": {
        "NODE_PATH": "src/",
        "NODE_ENV": "dev"
      }
    },
    "test": {
      "command": "nodemon -e ts -w **/*.test.ts -x node_modules/.bin/mocha --require ts-node/register **/*.test.ts",
      "env": {
        "NODE_PATH": "src/",
        "NODE_ENV": "test"
      }
    }
  },
  "author": "Vladislav Manakov",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "mongodb-memory-server": "^5.2.5",
    "nodemon": "^1.19.2",
    "tslint": "^5.20.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chalk": "^2.2.0",
    "@types/dotenv": "^6.1.1",
    "@types/http-status": "^0.2.30",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/mongoose": "^5.5.18",
    "@types/ramda": "^0.26.22",
    "@types/uuid": "^3.4.5",
    "bcrypt": "^3.0.6",
    "better-npm-run": "^0.1.1",
    "chalk": "^2.4.2",
    "dotenv": "^8.1.0",
    "http-status": "^1.3.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-jwt": "^3.6.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.7.1",
    "ramda": "^0.26.1",
    "supertest-koa-agent": "^0.3.2",
    "ts-node": "^8.4.1",
    "uuid": "^3.3.3"
  }
}
