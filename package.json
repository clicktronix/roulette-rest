{
  "name": "roulette-rest",
  "version": "1.0.0",
  "description": "Rest Node.js starter kit",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "better-npm-run dev",
    "test": "better-npm-run test",
    "check-types": "node_modules/.bin/tsc -p . --noEmit -w"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon -e ts -w ./src -x ts-node ./src/index.ts",
      "env": {
        "NODE_PATH": "src/"
      }
    },
    "test": {
      "command": "nodemon -e ts -w ./tests -x node_modules/.bin/mocha --require ts-node/register ./tests/**/*.ts",
      "env": {
        "NODE_PATH": "src/"
      }
    }
  },
  "author": "Vladislav Manakov",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai-arrays": "^1.0.2",
    "@types/chalk": "^2.2.0",
    "@types/dotenv": "^6.1.0",
    "@types/http-status": "^0.2.30",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.39",
    "@types/mongoose": "^5.3.11",
    "bcrypt": "^3.0.3",
    "better-npm-run": "^0.1.1",
    "chai-arrays": "^2.0.0",
    "chalk": "^2.4.2",
    "dotenv": "^6.2.0",
    "http-status": "^1.3.1",
    "jsonwebtoken": "^8.4.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.4.8",
    "supertest-koa-agent": "^0.3.2",
    "ts-node": "^7.0.1"
  }
}
