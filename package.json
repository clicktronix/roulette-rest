{
  "name": "node-typescript-koa-rest",
  "version": "1.0.0",
  "description": "Rest Node.js starter kit",
  "main": "dist/index",
  "typings": "dist/index",
  "engines": {
    "node": "12.13.x"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "clean:dist": "rm -rf dist",
    "dev": "better-npm-run dev",
    "prod": "better-npm-run prod",
    "test": "better-npm-run test",
    "check-types": "tsc -p . --noEmit -w",
    "lint": "eslint . --ext .js,.ts && tsc --noEmit --pretty",
    "lint:autofix": "eslint . --ext .ts --fix"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon -e ts -w ./src -x ts-node ./src/index.ts",
      "env": {
        "NODE_PATH": "src/",
        "NODE_ENV": "dev"
      }
    },
    "prod": {
      "command": "ts-node ./src/index.ts",
      "env": {
        "NODE_PATH": "src/",
        "NODE_ENV": "prod"
      }
    },
    "test": {
      "command": "mocha -r ts-node/register **/*.test.ts --exit",
      "env": {
        "NODE_PATH": "src/",
        "NODE_ENV": "test"
      }
    }
  },
  "author": "Vladislav Manakov",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.9",
    "@types/chalk": "^2.2.0",
    "@types/core-decorators": "^0.20.0",
    "@types/dotenv": "^6.1.1",
    "@types/http-status": "^0.2.30",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/koa": "^2.11.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-router": "^7.4.0",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.7.1",
    "@types/ramda": "^0.26.41",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.2",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-static": "^4.0.1",
    "@types/koa__cors": "^3.0.1",
    "bcrypt": "^3.0.8",
    "better-npm-run": "^0.1.1",
    "chalk": "^2.4.2",
    "core-decorators": "^0.20.0",
    "dotenv": "^8.2.0",
    "http-status": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^5.2.0",
    "koa-jwt": "^3.6.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-swagger-decorator": "^1.6.1",
    "lint-staged": "^9.5.0",
    "mongodb-memory-server": "^5.2.11",
    "mongoose": "^5.9.2",
    "ramda": "^0.26.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2",
    "uuid": "^3.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
