{
  "name": "roulette-rest",
  "version": "1.0.0",
  "description": "Rest Node.js starter kit",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean:dist": "rm -rf dist",
    "dev": "better-npm-run dev",
    "test": "better-npm-run test",
    "check-types": "tsc -p . --noEmit -w",
    "lint": "eslint . --ext .js,.ts && tsc --noEmit --pretty",
    "lint:autofix": "eslint . --ext .ts --fix",
    "prod:serve": "node dist/index.js",
    "heroku:build": "npm run clean:dist && npm run build && npm run prod:serve"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon -e ts -w ./src -x ts-node ./src/index.ts",
      "env": {
        "NODE_PATH": "src/",
        "NODE_ENV": "dev"
      }
    },
    "test": {
      "command": "mocha -r ts-node/register **/*.test.ts --exit",
      "env": {
        "NODE_PATH": "src/",
        "NODE_ENV": "test"
      }
    }
  },
  "author": "Vladislav Manakov",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.3",
    "@types/chalk": "^2.2.0",
    "@types/dotenv": "^6.1.1",
    "@types/http-status": "^0.2.30",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/koa": "^2.0.51",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.22",
    "@types/ramda": "^0.26.38",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "chai": "^4.2.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "better-npm-run": "^0.1.1",
    "chalk": "^2.4.2",
    "decko": "^1.2.0",
    "dotenv": "^8.2.0",
    "http-status": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.10.0",
    "koa-bodyparser": "^4.2.1",
    "koa-jwt": "^3.6.0",
    "koa-router": "^7.4.0",
    "lint-staged": "^9.5.0",
    "mongodb-memory-server": "^5.2.11",
    "mongoose": "^5.7.5",
    "ramda": "^0.26.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "ts-node": "^8.4.1",
    "uuid": "^3.3.3",
    "typescript": "^3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
